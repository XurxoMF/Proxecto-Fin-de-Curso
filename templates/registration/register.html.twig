{% extends 'base.html.twig' %}

{% block header %}{% endblock %}

{% block main %}
    <div class="w-100 h-100vh d-flex align-items-center justify-content-center fondo-oscuro text-white">
        <div class="w-auto text-center p-4">
            
            {{ form_start(registrationForm) }}
            
            <h1 class="h3 mb-4 fw-normal">Rex√≠strate!</h1>
            
            <div class="form-floating mb-3">
                {{ form_row(registrationForm.email) }}
            </div>
            
            <div class="form-floating mb-3">
                {{ form_row(registrationForm.plainPassword) }}
            </div>
            
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn mt-3 btn-md btn-vermello">Registrarme</button>

            {{ form_end(registrationForm) }}
            
            <p class="mt-3"><a href="/login">Xa tes conta?</a></p>
            
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
