{% extends 'base.html.twig' %}

{% block header %}{% endblock %}

{% block main %}
    <div class="w-100 h-100vh d-flex align-items-center justify-content-center fondo-oscuro text-white">
        <div class="w-auto text-center p-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Tes sesi贸n iniciada como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Pechar sesi贸n</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal mb-4">Inicia sesi贸n!</h1>

                <input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>

                <input type="password" placeholder="Constrasinal" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                       >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-md btn-vermello" type="submit">
                    Iniciar sesi贸n
                </button>
            </form>

            <p class="mt-3"><a href="/signin">Non tes conta?</a></p>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
