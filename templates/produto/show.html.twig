{% extends 'base.html.twig' %}

{% block main %}
    <div class="w-100 h-100vh d-flex align-items-center justify-content-center fondo-oscuro text-white">
        <div class="w-auto text-center p-4">
            <h1 class="mb-4">Información do produto</h1>

            <table class="table text-white">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ produto.id }}</td>
                    </tr>
                    <tr>
                        <th>Nome</th>
                        <td>{{ produto.nome }}</td>
                    </tr>
                    <tr>
                        <th>Precio</th>
                        <td>{{ produto.precio }}€</td>
                    </tr>
                    <tr>
                        <th>Cantidade</th>
                        <td>{{ produto.cantidade }}</td>
                    </tr>
                </tbody>
            </table>
            {{ include('produto/_delete_form.html.twig') }}

            <p><a href="{{ path('app_produto_edit', {'id': produto.id}) }}">Editar produto</a></p>
            <p><a href="{{ path('app_produto_index') }}">Volver ao listado de produtos</a></p>
        </div>
    </div>
{% endblock %}
